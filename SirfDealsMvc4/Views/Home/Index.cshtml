﻿@using PagedList;

@model PagedList.IPagedList<SirfDealsMvc4.Product>
@{
    ViewBag.Title = "Index";
    }

 <div class="clearfix">
  <div id= "posts" class="row">
@foreach (var item in Model)
{
   <!-- PROD. ITEM -->
    <div class="item col-sm-3">
        <div class="thumbnail">
            <!-- IMAGE CONTAINER-->
            <img alt="post image" src="@item.ImageUrl">
            <!--END IMAGE CONTAINER-->
            <!-- CAPTION -->
            <div class="caption">
                <h3>@Html.Raw(HttpUtility.HtmlDecode(item.Title))</h3>


                <div class="row-fluid">
                    <div class="span6">
                        <p class="lead">@item.Price</p>
                    </div>
                    <div class="span6">
                        <a class="btn btn-default btn-block" target="_blank" href="@item.AffiliateLink">Buy Now</a>
                    </div>
                </div>
            </div>
            <!--END CAPTION -->
        </div>
        <!-- END: THUMBNAIL -->
    </div>
    <!-- PROD. ITEM -->
  
  
    }




       </div>
   </div><!-- clearfix -->

<div>
   <ul class="pager">
      Page @(Model.PageCount < Model.PageNumber?0:Model.PageNumber)
    of @Model.PageCount

    @if (Model.HasPreviousPage)
    {
       <li> @Html.ActionLink("First","Index",new {page=1}) </li>
        @Html.Raw(" ");
      <li>   @Html.ActionLink("Prev","Index",new {page=Model.PageNumber-1}) </li>
    }
    else
    {
     <li class=" disabled"><a href="">First</a> </li>
     @Html.Raw(" ");
     <li class=" disabled"><a href="">Prev</a> </li>

    }
     
    @if (Model.HasNextPage)
    {
       <li>  @Html.ActionLink("Next","Index",new {page=Model.PageNumber+1}) </li>
        @Html.Raw(" ");
       <li>  @Html.ActionLink("Last","Index",new {page=Model.PageCount}) </li>
    }
     else
    {
   <li class="disabled"> <a href="">Next </a></li>
     @Html.Raw(" ");
     <li class="disabled"> <a href="">Last </a></li>

    }
    </ul>
</div>

@section Scripts {

    
}

